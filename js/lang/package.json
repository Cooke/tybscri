{
  "name": "tybscri",
  "version": "0.1.0",
  "description": "Embeddable statically typed scripting language for .NET",
  "main": "./lib",
  "types": "./lib",
  "repository": "https://github.com/Cooke/tybscri",
  "author": "Henrik Cooke",
  "license": "UNLICENSED",
  "type": "module",
  "private": false,
  "devDependencies": {
    "@types/antlr4": "^4.11.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.2",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "mocha": "^10.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "gen": "java -jar ../../lib/antlr-4.11.1-complete.jar -Dlanguage=JavaScript ../../spec/TybscriLexer.g4 -o ./src/generated",
